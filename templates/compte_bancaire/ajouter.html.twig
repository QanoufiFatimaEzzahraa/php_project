
{% block head %}
{% endblock %}
<style>
    /* public/assets/css/ajouter.css */

.form-group {
    margin-bottom: 20px;
}

.form-control {
    width: 100%;
    padding: 8px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

.btn {
    display: inline-block;
    padding: 8px 16px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    color: #fff;
    background-color: #007bff;
}

.btn:hover {
    background-color: #0056b3;
}

</style>

{% block body %}
    <h1>Ajouter un Compte Bancaire</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.nomBanque, 'Nom de la Banque') }}
            {{ form_widget(form.nomBanque, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.nomTitulaire, 'Nom du Titulaire') }}
            {{ form_widget(form.nomTitulaire, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.solde, 'Solde') }}
            {{ form_widget(form.solde, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}
