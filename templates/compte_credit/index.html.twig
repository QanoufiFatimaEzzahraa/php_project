{% extends 'base.html.twig' %}

{% block title %}Liste des Comptes de Crédit{% endblock %}

{% block body %}
    <style>
        .credit-table {
            width: 100%;
            border-collapse: collapse;
        }

        .credit-table th, .credit-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .credit-table th {
            background-color: #f2f2f2;
        }

        .credit-table tr:hover {
            background-color: #f5f5f5;
        }

        .btn {
            display: inline-block;
            padding: 8px 12px;
            margin: 4px 0;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
        }

        .btn:hover {
            opacity: 0.8;
        }
    </style>

    <h1>Liste des Comptes de Crédit</h1>
    <a href="{{ path('comptes_credits_ajouter') }}" class="btn btn-primary">Ajouter un Compte de Crédit</a>
    <table class="credit-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Banque</th>
                <th>Nom du Titulaire</th>
                <th>CVV</th>
                <th>limite de credit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for compte in comptes %}
                <tr>
                    <td>{{ compte.id }}</td>
                    <td>{{ compte.type }}</td>
                    <td>{{ compte.nomBanque }}</td>
                    <td>{{ compte.name }}</td>
                    <td>{{ compte.cvv }}</td>
                    <td>{{ compte.creditLimit }}</td>
                    <td>
                        <a href="{{ path('comptes_credits_modifier', {'id': compte.id}) }}" class="btn btn-secondary">Modifier</a>
                        <a href="{{ path('comptes_credits_supprimer', {'id': compte.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
